" Extensions
set surround
set commentary

" Search/Filter
" See: https://github.com/JetBrains/ideavim/wiki/Emulated-plugins
set smartcase
set incsearch

" IdeaVim stuff
" See: https://github.com/JetBrains/ideavim/wiki/%22set%22-commands
set ideajoin                " Use IDEA's joins
set idearefactormode="keep" " Do not change mode on refactor
set ideavimsupport=""       " Where to enable vim emulation

set scrolloff=5
set sidescrolloff=5

" Map leader
let mapleader = ' '

" IdeaVim keymappings
nmap R  <Action>(RenameElement)
nmap gs <Action>(GotoSymbol)
nmap gd <Action>(GotoDeclaration)
nmap gi <Action>(ShowErrorDescription)
nmap gh <Action>(QuickJavaDoc)

" Use Up/Down to scroll
nmap J <C-d>
nmap K <C-u>

" Map Left/Right to line beginning/end
nmap H 0
nmap L $
vmap H 0
vmap L $
