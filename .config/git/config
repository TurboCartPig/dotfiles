[init]
	defaultBranch = main

[color]
	ui = auto

[pull]
	ff = only

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[alias]
	s = status
	a = add
	c = commit
	cm = commit -m
	ch = checkout
	sw = switch
	d = diff --minimal --histogram
	ds = diff --minimal --histogram --staged
	rs = restore --staged
	ll = log --all --oneline
	graph = log --all --oneline --decorate --graph
	purge = clean -fdxi

[include]
	; System related local config
	path = ~/.config/git/config.local
	; Context (work/home) related config overrides
	path = ~/.config/git/config.context
