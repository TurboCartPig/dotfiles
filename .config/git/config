# This is Git's per-user configuration file.
[user]
	name = Dennis Kristiansen
	email = denniskristiansen@protonmail.com
	username = TurboCartPig

[init]
	defaultBranch = main

[color]
	ui = auto

[core]
	editor = nvim
	pager = bat

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[pull]
	rebase = true
	ff = only

[alias]
	s = status
	a = add
	c = commit
	sw = switch
	d = diff
	ds = diff --staged
