	username = TurboCartPig

[init]
	defaultBranch = main

[color]
	ui = auto

[core]
	editor = nvim
	pager = bat

[pull]
	ff = only

[merge]
	guitool = smerge
	tool = nvimdiff
	conflictstyle = diff3

[alias]
	s = status
	a = add
	c = commit
	cm = commit -m
	ch = checkout
	sw = switch
	d = diff --minimal --histogram
	ds = diff --minimal --histogram --staged
	rs = restore --staged
	ll = log --all --oneline
	graph = log --all --oneline --decorate --graph
	purge = clean -fdxi

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

